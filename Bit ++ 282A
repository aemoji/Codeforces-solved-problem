import java.util.*; 
  
public class Solve { 
      public static void main(String args[]) { 
    Scanner sc=new Scanner(System.in);
    int t=sc.nextInt();
    int x=0;
    while(t-->0){
   String s=sc.next();
   
       if(s.charAt(1)=='+' || s.charAt(0)=='+' ){
           x++;
           
        }else{
            x--;
     
    }
    }
    System.out.println(x);
    
   } 
} 
