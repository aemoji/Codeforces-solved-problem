import java.util.*;

public class Solve116{
 	public static void main(String[] args) {
 		
 	Scanner sc=new Scanner(System.in);
 	int n =sc.nextInt();
 	int a,b;
 	int mx=0;
 	 int maxx=0;
   for(int i=0;i<n;i++){
 	 a=sc.nextInt();
   b=sc.nextInt();
   mx+=b-a;
 	 maxx=Math.max(maxx,mx);}
   System.out.println(""+maxx);
}
}
