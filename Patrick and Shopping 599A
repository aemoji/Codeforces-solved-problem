import java.util.*;

  public class Solve599{
 
 	public static void main(String[] args) {
 		
 		Scanner sc=new  Scanner(System.in);
 		int a=sc.nextInt();
 		
 		int b=sc.nextInt();
 		int c=sc.nextInt();
 		
 	int ans=(a+b)*2;
 	
 	int an=Math.min(a,b)+c;
 	  an=an*2;
 	  int k=a+b+c;
 	  
 	  ans=Math.min(ans,an);
 	  
 	  System.out.println(Math.min(ans,k));
 		
 	}
 	}
