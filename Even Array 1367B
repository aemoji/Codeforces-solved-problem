import java.util.*;

public class EvenAray{
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int t=sc.nextInt();
		while(t-->0){

			int n=sc.nextInt();
			int a=0,b=0;

			for(int i=0;i<n;i++){
		     int x=sc.nextInt();
		     if(x%2!=i%2){
		         if(i%2==0) a++;
		         else b++;
		     }
			}
			
			if(a==b)System.out.println(b);
			else System.out.println("-1");
		     

       }
   }
}
