import java.util.*;

  public class Solve{
 
 	public static void main(String[] args) {
 		
 		Scanner sc=new  Scanner(System.in);
 		int n=sc.nextInt();

 		while(n-->0){


 			String s=sc.next();
 			String j="";

 			for(int i=0;i<s.length();i+=2){

                   j+=s.charAt(i);

 			}

 			System.out.println(j+s.charAt(s.length()-1));
 		}
 	}
 }
