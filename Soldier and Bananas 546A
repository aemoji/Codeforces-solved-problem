import java.util.*;


 public class Solve546{



public static void main(String[] args) {
	

	Scanner sc=new Scanner(System.in);
	int k=sc.nextInt();

	int n=sc.nextInt();

	int w=sc.nextInt();
	int sum=0;
	int bo=0;

     for(int i=1;i<=w;i++){

         sum+=k*i;
     }

    bo= sum-n;
   if(sum>n){

   	System.out.println(bo);
   }

   else{
   	System.out.println("0");
   }

}

}
